 @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&display=swap');
        html{
          font-size: 62.5%;
        }
        *, *::after, *::before{
            box-sizing: border-box;
            margin: 0;
            padding:0;
            font-family: 'Inter', sans-serif;
        }
        .container{
	        max-width: 1200px;
	        width:90%;
	        margin:auto;
        }
        body{
            background: linear-gradient(to right, #DD2476, #FF512F); 

        }
        li{
            list-style-type: none;
        }
        a{
            text-decoration: none;
            color:white;
        }

        {{!-- ++++++++++++++++++++Nav Bar Style++++++++++++++++++++++++++ --}}
.navbar{
            display: flex;
            flex-direction: column;
            width: 100vw;
            height: 30vh;
            background-color: white;
        }
        .navSection1{
            width: 100%;
            height: 80%;
            display: flex;
            flex-direction: row;
        }
        .navSection2{
            width: 100%;
            height: 20%;
        }
        .navSection2 ul{
            display: flex;
            flex-direction:row;
            justify-content: center;
            align-items: center;
            height: 100%;
        }
        .navSection2 div{
            margin:auto 1rem;
            padding: 0.5rem;
            background: linear-gradient(to right, #DD2476, #FF512F); 
            -webkit-text-fill-color: transparent;
            -webkit-background-clip: text;
            font-size: 1.5rem;
            font-weight: bold;
        }
        .image{
           width: 33.333%;
           height: 100%;
        }
        .image img{
            height: 100%;
            width: 100%;
            object-fit: fill;
	        object-position: center;
        }
        .navSection2 div:hover{
         border-radius: 1rem;
         background: linear-gradient(to right, #DD2476, #FF512F); 
         -webkit-text-fill-color:white;
        }
{{!-- ++++++++++++++++++++++++++++++++++++++ Main Form+++++++++++++++++++++++++++++ --}}
        .outerbox{
             height: 70vh;
             display: flex;
             justify-content: center;
             align-items: center;
         }
         .innerbox{
             padding: 2rem;
             font-size: 1.5rem;
             font-weight: bold;
             height: 80%;
             width: 50%;
             background-color: white;
             border-radius: 5%;
             box-shadow: 5px 5px 10px #aaa;
             display: flex;
             flex-direction: column;
         }
         .innerbox input{
             border:2px solid #DD2476;
             border-radius: 10px;
             padding: 0 2rem;
             margin-bottom: 1rem;
         }
         .submit{
            background: linear-gradient(to right, #DD2476, #FF512F); 
         -webkit-text-fill-color:white;
           width: 20%;
           align-self: center;
           font-size: 2rem;
           padding: 0.5rem 0.5rem;
         }
         